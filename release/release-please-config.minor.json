{
	"release-type": "node",
	"versioning": "always-bump-minor",
	"packages": {
		"packages/package-a": {
			"package-name": "package-a",
			"changelog-path": "docs/changelog.md"
		},
		"packages/package-b": {
			"package-name": "package-b",
			"changelog-path": "docs/changelog.md"
		}
	},
	"plugins": [
		"node-workspace",
		{
			"type": "linked-versions",
			"groupName": "repo",
			"components": [
				"package-a",
				"package-b"
			]
		}
	]
}